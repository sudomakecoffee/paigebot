{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@config/*": [
        "config/*"
      ],
    }
  }
}